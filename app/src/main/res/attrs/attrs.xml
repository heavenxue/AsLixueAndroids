<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DeleteEditText">
        <attr name="deleteIcon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PagerIndicator">
        <attr name="pi_slidingBlock" format="reference|color" />
        <attr name="pi_allowWidthFull" format="boolean" />
        <attr name="pi_disableViewPager" format="boolean" />
        <attr name="pi_disableTensileSlidingBlock" format="boolean" />
        <attr name="pi_bottomLineColor" format="color" />
        <attr name="pi_bottomLineHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SivinBanner">
        <!-- 指示点容器背景 -->
        <attr name="banner_pointContainerBackground" format="reference|color" />
        <!-- 指示点背景 -->
        <attr name="banner_pointDrawable" format="reference" />
        <!-- 指示点容器左右内间距 -->
        <attr name="banner_pointContainerLeftRightPadding" format="dimension" />
        <!-- 指示点上下外间距 -->
        <attr name="banner_pointTopBottomMargin" format="dimension" />
        <!-- 指示点左右外间距 -->
        <attr name="banner_pointLeftRightMargin" format="dimension" />
        <!-- 指示点的位置 -->
        <attr name="banner_pointGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_horizontal" value="0x01" />
        </attr>
        <!-- 默认图片 -->
        <attr name="banner_default_image" format="reference" />
        <!-- 自动轮播的时间间隔 -->
        <attr name="banner_pointAutoPlayInterval" format="integer" />
        <!-- 页码切换过程的时间长度 -->
        <attr name="banner_pageChangeDuration" format="integer" />
        <!-- 提示文案的文字颜色 -->
        <attr name="banner_tipTextColor" format="reference|color" />
        <!-- 提示文案的文字大小 -->
        <attr name="banner_tipTextSize" format="dimension" />
        <!--viewPager 内padding-->
        <attr name="banner_ViewPager_padding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="HeaderViewPager">
        <attr name="hvp_topOffset" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsIndicatorColor" format="color"/>
        <attr name="pstsUnderlineColor" format="color"/>
        <attr name="pstsDividerColor" format="color"/>
        <attr name="pstsIndicatorHeight" format="dimension"/>
        <attr name="pstsUnderlineHeight" format="dimension"/>
        <attr name="pstsDividerPadding" format="dimension"/>
        <attr name="pstsTabPaddingLeftRight" format="dimension"/>
        <attr name="pstsScrollOffset" format="dimension"/>
        <attr name="pstsTabBackground" format="reference"/>
        <attr name="pstsShouldExpand" format="boolean"/>
        <attr name="pstsTextAllCaps" format="boolean"/>
    </declare-styleable>

    <!--圆形指示器-->
    <declare-styleable name="CircleIndicator">
        <attr name="ci_normalRadius" format="dimension"/>
        <attr name="ci_normalRadiusColor" format="color"/>
        <attr name="ci_selectedRadius" format="dimension"/>
        <attr name="ci_selectedRadiusColor" format="color"/>
        <attr name="ci_dotPadding" format="dimension"/>
        <attr name="ci_isStroke" format="boolean"/>
        <attr name="ci_normalStrokeWidth" format="dimension"/>
        <attr name="ci_isBlink" format="boolean"/>
    </declare-styleable>

    <!--循环滑动的ViewPager-->
    <declare-styleable name="LoopViewPager">
        <attr name="lvp_isAutoLoop" format="boolean"/>
        <attr name="lvp_delayTime" format="integer"/>
    </declare-styleable>
</resources>